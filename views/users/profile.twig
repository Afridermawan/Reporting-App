{% extends 'templates/default.twig' %}
{% block title %} Profile {% endblock %}
{% block css %}
    <style>
    .col1 {
        width: 120px;
        float: left;
    }
    </style>
{% endblock %}
{% block content %}

            <div class="panel-body">
              <div class="box box-info">
                <a href="#"><h4 class="text-center" style="font-family:impact">
                    My &nbsp;P r o f i l e</h4></a>
                <div class="box-header">
                <div class="col-lg-4">
            {% if login %}
                <p class="text-center"><b>Photo</b><br>
                <img style="width:300px" class="img-thumbnail"
                 src="{{ base_url() }}/assets/images/{{ login.image }}" alt="">
            </div>
              <div class="col-lg-4">

                <p class="text-left"><b><span class="col1">Name </span>:  </b> {{login.name}}<br><br>
                <b><span class="col1">Username </span>:  </b> {{login.username}}<br><br>
                <b><span class="col1">Email </span>:  </b> {{login.email}}<br><br>
                <b><span class="col1">Gender </span>:  </b> {{login.gender}}<br><br>
                <b><span class="col1">Addres </span>:  </b> {{login.address}}<br><br>
                <b><span class="col1">Phone </span>:  </b> {{login.phone}}<br><br>
                <b><span class="col1">Registration Date</span>:  </b>{{login.created_at | date("F jS Y ")}}</p>
              </div>
        </div>
    </div>
    <a href="{{path_for('user.setting')}}"><button type="submit"
         class="btn btn-social-button btn-github">
         <i class="fa fa-cogs"></i> Setting profile</button></a>
            {% endif %}
{% endblock %}
