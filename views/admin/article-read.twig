{% extends 'templates/default.twig' %}

{% block title %} RA | Reporting App {% endblock %}

{% block headContent %} Article - Read {% endblock %}

{% block content %}
	<div class="media">
		<div class="media-left">
		    <a href="#">
		      <img class="media-object" src="{{ base_url() }}/assets/images/{{ article.image }}" width="200" height="200" alt="...">
		    </a>
		</div>
		<div class="media-body">
			<div class="media-heading">
				<h4 class="media-heading">{{ article.title }}</h4>
				<p class="fa fa-calendar">{{ article.created_at|date('d/m/Y') }}</p>
				<p class="fa fa-clock-o">{{ article.created_at|date("H:m") }}</p>
			</div>
			<p class="text-justify">{{ article.content }}</p>
		</div>
	</div>
{% endblock %}