<div class="container">
    <div class="col-md-8 col-md-offset-1">
	<form method="GET" action="">
	    <div class="input-group">
	        <input type="text" class="form-control" name="search" placeholder="Search for...">
	        <span class="input-group-btn">
	            <button class="btn btn-default" type="submit">Search</button>
	        </span>
	    </div>
 	</form>   
	</br>
        <div class="card">
            {% for article in data %}
            <center><img class="card-img-top" src="{{ base_url() }}/assets/images/{{ article.image }}"
             width="75%" height="300"  alt="Lights" alt="Card image cap"></center>
            <div class="card-block">
                <h4 class="media-heading">{{ article.title }}</h4>
                <p class="fa fa-calendar"> {{ article.created_at|date('d/m/Y') }} </p>
                <p class="fa fa-clock-o"> {{ article.created_at|date("H:i") }} </p>
                <p class="text-justify">{{ article.content|slice(0, 300) }}

                    {% if login.status == 1 %}
                    <a href="{{ path_for('article-read', { id:article.id }) }}">Readmore...</a></p>
                    {% elseif login.status == 0 %}
                    <a href="{{ path_for('user.article-read', { id:article.id }) }}">Readmore...</a></p>
                    {% endif %}

                    <br>
                {% endfor %}
            </div>
        </div>
        <hr>
        <nav aria-label="...">
			<ul class="pager">
				{% if current > first_page %}
			    	<li class="previous"><a href="{{ base_url() }}/home?page={{ first_page }}"><span aria-hidden="true">&larr;</span> First page</a></li>
			    	<li class="previous"><a href="{{ base_url() }}/home?page={{ current - 1 }}"><span aria-hidden="true">&larr;</span> Back</a></li>
			    {% endif %}
            	{% if current < total_page %}
			    	<li class="next"><a href="{{ base_url() }}/home?page={{ total_page }}">Last page <span aria-hidden="true">&rarr;</span></a></li>
			    	<li class="next"><a href="{{ base_url() }}/home?page={{ current + 1 }}">Next <span aria-hidden="true">&rarr;</span></a></li>
			    {% endif %}
			    {% if current <= 1 %}
			    	<li class="disabled pull-left"><a href="#"><span aria-hidden="false">&larr;</span> Back</a></li>
			    {% endif %}
			  </ul>
		</nav>
    </div>

