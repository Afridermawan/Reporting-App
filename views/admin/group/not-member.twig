{% extends 'templates/default.twig' %}

{% block title %} Group | All Members {% endblock %}

{% block headContent %}
	 <i style="color:green" class="fa fa-check-square-o">All Members </i>
{% endblock %}

{% block content %}

<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">
			<div class="panel-body">
				{% if login.status == 1 %}
				<form action="{{ path_for('member.group.set') }}" method="POST">
				{% elseif login.status == 0 %}
				<form action="{{ path_for('pic.member.group.set') }}" method="POST">
				{% endif %}
					<table id="example2" class="table table-bordered table-striped table-hover">
						<thead>
							<tr>
								<th>Name</th>
								<th>Gender</th>
								<th>Address</th>
								<th>Email</th>
								<th>Phone</th>
								<th>Image</th>
								<th style="width: 40px">Select</th>
							</tr>
						</thead>
						{% for user in users %}
						<tr>
							<td>{{ user.name }}</td>
							<td>{{ user.gender }}</td>
							<td>{{ user.address }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.phone }}</td>
							<td><img src="{{ base_url() }}/assets/images/{{ user.image }}" width="100" height="100"></td>
							<td class="text-center"><input type="checkbox" name="user[]" value="{{ user.id }}"></td>
						</tr>
						{% endfor %}
					</table>
					<hr style="margin-top:10px;margin-bottom:10px;" >
				</div>
				<div class="panel-body" align="right">
					<input type="hidden" name="group_id" value="{{ group_id }}">
					<button type="submit" name="member" value="1" class="btn btn-primary"><i class="fa fa-user-plus fa-lg" aria-hidden="true"></i> Set as Member </button>
					<hr style="margin-top:10px;margin-bottom:10px;" >
				</form>
			</div>
		</div>
	</div>
</div>

{% endblock %}
